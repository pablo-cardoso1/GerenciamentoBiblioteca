@model GerenciamentoBiblioteca.Models.Livro;

@{
    ViewData["Title"] = "Remover Livro";
}

<h1 style="color: red;">Deseja realmente remover esse livro? Essa operação é irreversível</h1>
<hr>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Autor)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Autor)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.AnoPublicacao)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.AnoPublicacao)
        </dt>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Quantidade)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Quantidade)
        </dt>
    </dl>
</div>
<form asp-action="Remover">
    <input type="submit" value="Remover"
    class="btn btn-danger" />
</form>
<a asp-action="Index">Voltar</a>